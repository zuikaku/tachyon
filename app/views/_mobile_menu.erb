<div id="menu">
  <div  id="title">
    <a href="/">Freeport 7</a>
    <br />
    <span>мобильная версия</span>
  </div>
  <div id="counters">
    за сегодня сообщений: <%= @counters[:posts] %>
    <br />
    онлайн: <span><%= @counters[:online] %></span>
  </div>
  <div id="taglist">
    <%= cache("menu/#{params[:tag].to_s}") do %>
      <%
        active = ""
        active = 'class="active"' if @tag == '~'
      %>
      <a href="/~/" style="font-weight: bold;" <%= active.html_safe %>>Обзор</a>    
      <% Tag.all.each do |tag| %>
        <%
          active = ""
          active = 'class="active"' if @tag == tag
        %>
        <a href="/<%= tag.alias %>/" <%= active.html_safe %>><%= tag.name %></a>    
      <% end %>
    <% end %>
  </div>
</div>
